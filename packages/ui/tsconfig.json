{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    // "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "checkJs": true,
    "inlineSources": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/**.*.js"]
}
